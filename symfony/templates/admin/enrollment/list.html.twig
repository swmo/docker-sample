{% extends 'admin/base.html.twig' %}

{% block title %} Anmeldungen {% endblock %}

{% block main %}

<div class="w-full mx-auto">
  <div class="bg-white shadow-md rounded my-6">
    <table class="text-left w-full border-collapse text-xs sm:text-sm ">
      <thead>
        <tr>
          <th class="py-4 px-1 sm:px-4 lg:px-6 bg-grey-lightest font-bold uppercase text-grey-dark border-b border-grey-light">Vorname</th>
          <th class="py-4 px-1 sm:px-4 lg:px-6 bg-grey-lightest font-bold uppercase text-grey-dark border-b border-grey-light">Nachname</th>
          <th class="hidden lg:table-cell py-4 px-1 sm:px-4 lg:px-6 bg-grey-lightest font-bold uppercase text-grey-dark border-b border-grey-light">E-Mail</th>
          <th class="hidden md:table-cell  py-4 px-1 sm:px-4 lg:px-6 bg-grey-lightest font-bold uppercase text-grey-dark border-b border-grey-light">Mobile</th>

          <th class="py-4 px-1 sm:px-4 lg:px-6 bg-grey-lightest font-bold uppercase text-grey-dark border-b border-grey-light">Einsatz</th>
          <th class="py-4 px-1 sm:px-4 lg:px-6 bg-grey-lightest font-bold uppercase text-grey-dark border-b border-grey-light">
          </th>
        </tr>
      </thead>
      <tbody>

          {% for enrollment in enrollments %}
        <tr class="hover:bg-grey-lighter">
          <td class="py-4 px-1 sm:px-4 lg:px-6 border-b border-grey-light">
            {{ enrollment.firstname }}
        </td>
          <td class="py-4 px-1 sm:px-4 lg:px-6 border-b border-grey-light">
            {{ enrollment.lastname }}
          </td>
          <td class="hidden lg:table-cell  py-4 px-1 sm:px-4 lg:px-6 border-b border-grey-light">
            {{ enrollment.email }}
          </td>
          <td class="hidden md:table-cell  py-4 px-1 sm:px-4 lg:px-6 border-b border-grey-light">
            {{ enrollment.mobile }}
          </td>
          <td class="py-4 px-1 sm:px-4 lg:px-6 border-b border-grey-light">
            {{ enrollment.missionChoice01.name }}

            {{enrollment.getWorkingTime|date('%h:%i')}}
          </td>
          <td class="py-4 px-1 sm:px-4 lg:px-6  border-b text-right border-grey-light">
            <a href="{{ path('admin_enrollment_edit',{id: enrollment.id})}}" class="text-grey-lighter font-bold py-1 px-3 rounded text-xs bg-green hover:bg-green-dark">Edit</a>
          </td>
          
          </tr>
    {% endfor %}

          </tbody>
          </table>
          </div>
          </div>

{% endblock %}
