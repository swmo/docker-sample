{% extends 'admin/base.html.twig' %}

{% block title %} Anmeldungen {% endblock %}

{% block main %}

<div class="w-full mx-auto">
  <div class="bg-white shadow-md rounded my-6">
    <table class="text-left w-full border-collapse">
      <thead>
        <tr>

          <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">E-Mail</th>
          <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Mobile</th>
          <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">
          </th>
        </tr>
      </thead>
      <tbody>

          {% for enrollment in enrollments %}
  
          <td class="py-4 px-6 border-b border-grey-light">
            {{ enrollment.email }}
          </td>
          <td class="py-4 px-6 border-b border-grey-light">
            {{ enrollment.mobile }}
          </td>
          <td class="py-4 px-6 border-b border-grey-light">

            {% if enrollment.missionChoice01 %}
              {{ enrollment.missionChoice01.name }} <br>
            {% endif %}
            {% if enrollment.missionChoice02 %}
              {{ enrollment.missionChoice02.name }} <br>
            {% endif %}
            
            {{enrollment.getWorkingTime|date('%h:%i')}}
          </td>
          
          </tr>
    {% endfor %}


          </tbody>
          </table>
          <div class="p-5">
            <div class="mb-5">
                <a  href="mailto:personal@burdorfer-stadtlauf.ch?bcc={% for enrollment in enrollments %}{{ enrollment.email }},{% endfor %}">Mailprogram starten</a>
            </div>
            Gruppe "," getrennt:
                <textarea class="w-full mb-5" rows="5">{% for enrollment in enrollments %}{{ enrollment.email }},{% endfor %}</textarea>
            Gruppe ";" getrennt:
                <textarea class="w-full mb-5" rows="5">{% for enrollment in enrollments %}{{ enrollment.email }},{% endfor %}</textarea>
            </div>
          </div>
          </div>

{% endblock %}
