{% extends 'admin/base.html.twig' %}

{% block title %} Stammdaten {% endblock %}

{% block main %}

<h2>Stammdaten </h2>

<table class="table-auto">
  <thead>
    <tr>
      <th>OU</th>
        <th class="px-4 py-2">Lastname</th>
      <th class="px-4 py-2">Firstname</th>
      <th class="px-4 py-2">Street</th>
        <th class="px-4 py-2">City</th>
        <th class="px-4 py-2">PLZ</th>
      <th class="px-4 py-2">Mobile</th>
      <th class="px-4 py-2">Email</th>
      <th class="px-4 py-2">Remark</th>
      <th class="px-4 py-2">Action</th>
    </tr>
  </thead>
   <tbody>
      {% for person in persons %}
         <tr>
            <td>
               {% for organisation in person.getOrganisations() %}
                     {{organisation.name}}
               {% endfor %}
            </td>
            <td class="border px-4 py-2">
               {{person.lastname}}
            </td>
            <td class="border px-4 py-2">
               {{person.firstname}}
            </td>
            <td class="border px-4 py-2">
               {{person.street}}
            </td>
            <td class="border px-4 py-2">
               {{person.city}}
            </td>
            <td class="border px-4 py-2">
               {{person.zip}}
            </td>
            <td class="border px-4 py-2">
               {{person.mobile}}
            </td>
            <td class="border px-4 py-2">
               {{person.email}}
            </td>
            <td class="border px-4 py-2">
               {{person.remark}}
            </td>
            <td>
            <a href="{{path('admin_person_delete',{'id':person.id})}}">delete</a>
            </td>
         </tr>
      {% endfor %}
   </tbody>
</table>
    
{% endblock %}
